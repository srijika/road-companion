<html>
    <head><title>Reset Password</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">
        
    </head>
    <body>
    <div class="col-md-8 mx-auto mt-5 bg-light p-3">
        <h1 class="text-center">Reset Password</h1>
        <form action="http://13.234.31.171/api/recoverPassword/mobile" method="post" id = 'resetPassword'>
            <input class="form-control" name="id" id="id" type="hidden" value="<%= id %>"/>
            <div class="form-group p-2">
                <label>password :</label>
            <input class="form-control" name="password" id="password" required type="password" />
            </div>
            <div class="form-group p-2">
                <label>confirm password:</label>
                <input class="form-control" type="password" name="confirm_password" required id="confirm_password" />
            </div>
            <center><span id="message"></span></center>
            <center> <button  class="btn mt-2 btn-primary" type="button" onclick="submitFunc()">Submit</button> </center>
        </form>
    </div>



    </body>
    </html>
    <script>
        function submitFunc(e) {
         
            if($('#password').val() == $('#confirm_password').val() && $('#password').val() != ''  && $('#confirm_password').val() != '' ){
                if($('#password').val().length <=6 || $('#confirm_password').val().length <=6 ){
                    alert('Password length sould be greater than 6 character!');
                    return false;
            }
               
                $("#resetPassword").submit();

            }else {
                alert('Password does not match!');
            }

        }
        $('#password, #confirm_password').on('keyup', function () {
        if ($('#password').val() == $('#confirm_password').val()) {
            $('#message').html('Matching').css('color', 'green');
        } else 
            $('#message').html('Not Matching').css('color', 'red');
        });
    </script>